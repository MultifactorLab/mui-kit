{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/mui-kit",
  "lib": {
    "entryFile": "src/index.ts"
  },
  "assets": [
    {
      "glob": "styles.css",
      "input": "src/styles",
      "output": "styles"
    },
    {
      "glob": "theme-base.css",
      "input": "src/styles",
      "output": "styles"
    },
    {
      "glob": "variables.css",
      "input": "src/styles",
      "output": "styles"
    },
    {
      "glob": "base/**/*",
      "input": "src/styles",
      "output": "styles"
    }
  ]
}
